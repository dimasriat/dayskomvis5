div(class="w-full min-h-screen" id="daftar" style="color: #14163F;")
	div(class="text-center font-bold py-8 text-3xl") Karya Pilihan
	div(class="w-full" style="background-color: #EFC12E;")
		div(class="container mx-auto md:px-24 lg:px-48 py-12")
			div(class="flex flex-col md:flex-row w-full px-4")
				-
					var target = [
						{src: 'karya-1.png', title: 'Judul 1', kreator: 'Syuhada Faris', ig: '@createvree'},
						{src: 'karya-2.png', title: 'Judul 2', kreator: 'Syuhada Faris', ig: '@createvree'},
						{src: 'karya-3.png', title: 'Judul 3', kreator: 'Syuhada Faris', ig: '@createvree'},
					]
				each item in target
					div(class="w-full py-4 flex flex-col bg-white rounded-xl md:mx-4 my-8 skuy skuy-up")
						div(class="w-full px-4 flex justify-center")
							img(src=`/assets/img/${item.src}` class="max-w-full h-full")
						div(class="w-full px-4 mt-8")
							div(class="w-full text-left text-xl font-bold") #{item.title}
						div(class="w-full px-4 mt-4")
							div(class="w-full text-left text-gray-500 text-sm")
								| Created by: #{item.kreator}
								br
								| Instagram: #{item.ig}