div(class="w-full min-h-screen text-white bg-blue-600" id="join")
	div(class="container mx-auto px-4 py-12")
		div(class="text-center font-bold py-8 text-3xl skuy skuy-up") Video Ngojol
		div(class="flex flex-col md:flex-row w-full")
			//- video
			div(class="w-full md:w-1/2 py-8 flex justify-center skuy skuy-up")
				iframe(class="w-full rounded-xl shadow-xl" height="315" src="https://www.youtube.com/embed/Zi5E9LHOjKc" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen)
			//- links
			div(class="w-full md:w-1/2 py-8 md:pl-8")
				-
					var data = [
						{src: 'ngojol.png', title: 'Apa itu Ngojol', href: 'https://www.youtube.com/watch?v=Zi5E9LHOjKc&list=PLEAffnws-GEN09CUhYqnLq_PFomsOG7II&index=6'},
						{src: 'customer.png', title: 'Ngojol for Customer', href: 'https://www.youtube.com/watch?v=lrbZNgcTo3A&list=PLEAffnws-GEN09CUhYqnLq_PFomsOG7II&index=4'},
						{src: 'driver.png', title: 'Ngojol for Driver', href: 'https://www.youtube.com/watch?v=uyk1DO6ek-c&list=PLEAffnws-GEN09CUhYqnLq_PFomsOG7II&index=2'},
						{src: 'merchant.png', title: 'Ngojol for Merchant', href: 'https://www.youtube.com/watch?v=mo6YPapnhXw&list=PLEAffnws-GEN09CUhYqnLq_PFomsOG7II&index=1'},
						{src: 'bumdes.png', title: 'Ngojol for Bumdes', href: 'https://www.youtube.com/watch?v=dxyFaqEL5QM&list=PLEAffnws-GEN09CUhYqnLq_PFomsOG7II&index=5'},

					]
				each item in data
					div(class="w-full pb-8 flex items-center")
						div(class="w-1/6 md:w-1/12")
							img(src=`/assets/img/ngojol_cards/${item.src}` class="w-full")
						div(class="w-5/6 md:w-11/12 pl-4")
							a(href=`${item.href}` class="hover:underline font-bold text-lg")= item.title
